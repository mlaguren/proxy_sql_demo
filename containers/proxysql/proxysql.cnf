datadir="/var/lib/proxysql"

admin_variables=
{
    admin_credentials="admin:admin;radmin:radmin"
    mysql_ifaces="0.0.0.0:6032"
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6033"
    default_schema="information_schema"
    stacksize=1048576
    server_version="5.5.30"
    connect_timeout_server=3000
    monitor_username="monitor"
    monitor_password="monitor"
    monitor_history=600000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=500
    ping_interval_server_msec=120000
    ping_timeout_server=500
    commands_stats=true
    sessions_sort=true
    connect_retries_on_failure=10
}


mysql_servers =
(
	{
		address="mysql-prod"
		port=3306
		hostgroup=1
		max_connections=200
		comment="Production Demo Server"
	}
)

mysql_users:
(
	{
		username = "proxy_sql"
		password = "proxy_sql"
		default_hostgroup = 1
		max_connections=1000
	    active = 1
	}
)

mysql_query_rules:
(
    {
        rule_id=10
        active=0
        match_pattern="^SELECT *.*FROM.*USERS$"
        replace_pattern="select first, last,email, 'xxxxxxxxx' as ein from users"
        destination_hostgroup=1
        apply=1
    },
    {
        rule_id=20
        active=0
        schemaname="production"
        match_pattern="^SELECT /\*!40001 SQL_NO_CACHE \*/ \* FROM `users`"
        replace_pattern="SELECT SQL_NO_CACHE idusers, first, last, email, 'xxxxxxxxx'  FROM users"
        apply=1
    },
    {
        rule_id=100
        active=1
        match_pattern="^SELECT *.*FROM.*USERS$"
        error_msg="Query is not allowed due to sensitive information, please contact Melvin"
        destination_hostgroup=1
        apply=1
    }
)
